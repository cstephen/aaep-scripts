<%
// This template is used to create new nodes in Drupal via POSTs to the
// REST Server API. Each Drupal field corresponds to a field from the LoopBack
// model. The template's variable names (except type and title) come from the
// LoopBack model. This template thus maps values from LoopBack into Drupal.
//
// The basic structure of this template file was adapted from the results of a
// GET request to Drupal's REST Server API.
%>

{
  "type": "<%= type %>",
  "title": "<%= title %>",
  "body": {
    "und": [{
      "value": "<%= notes %>"
    }]
  },
  "field_loopback_id": {
    "und": [{
      "value": "<%= id %>"
    }]
  },
  "field_cloud_cover": {
    "und": [{
      "value": "<%= cloudCover %>"
    }]
  },
  "field_precipitation": {
    "und": [{
      "value": "<%= precipitation %>"
    }]
  },
  "field_visibility": {
    "und": [{
      "value": "<%= visibility %>"
    }]
  },
  "field_pressure_tendency": {
    "und": [{
      "value": "<%= pressureTendency %>"
    }]
  },
  "field_pressure_value": {
    "und": [{
      "value": "<%= pressureValue %>"
    }]
  },
  "field_temperature_value": {
    "und": [{
      "value": "<%= temperatureValue %>"
    }]
  },
  "field_temperature_units": {
    "und": [{
      "value": "<%= temperatureUnits %>"
    }]
  },
  "field_wind_value": {
    "und": [{
      "value": "<%= windValue %>"
    }]
  },
  "field_wind_units": {
    "und": [{
      "value": "<%= windUnits %>"
    }]
  },
  "field_wind_direction": {
    "und": [{
      "value": "<%= windDirection %>"
    }]
  },
  "field_phenomenon": {
    "und": [{
      "value": "<%= other %>"
    }]
  }
}
